{{< core/modal }}
    {{$title}}{{#str}} title_modal_search, mod_lanebs {{/str}}{{/title}}
    {{$body}}
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <div class="loader hide" style="position:inherit">
            <div style="position:absolute;opacity:0.7;width:1454px;height:1051px;background-color:white;z-index:9999;">
                <div class="spinner-border" style="position:absolute;top:40%;right:45%;" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
        </div>
        <style>.bg-primary {background-color:#4285f4!important;color:#fff!important;}</style>
        <div class="breadcrumbs" style="padding-left:15px;"><p></p></div>
        <div class="d-flex flex-row justify-content-around">
            <div class="container" data-action="categories" data-id="null" style="flex:0.3 1;">
                <button id="category" data-action="category_tree" class="btn btn-default" style="color:#174c8d;background-color:white;border-color:#4285f4;">Выбрать по категории</button>
            </div>
            <div class="container" style="flex:0.7 1;">
                <div>
                    <form>
                        <div class="form-group row">
                            <div class="col-sm-10 input-group">
                                <input type="text" class="form-control" name="searchString" id="searchText" data-action="search_text" placeholder="{{#str}} search_placeholder_str, mod_lanebs {{/str}}">
                                <button class="btn bg-transparent" name="clear_search" style="margin-left: -40px; z-index: 100;">
                                    <i class="fa fa-times"></i>
                                </button>
                            </div>
                            <div class="col-sm-2">
                                <button type="button" id="searchButton" name="searchSubmit" class="btn btn-primary" data-action="search_button">{{#str}} button_str, mod_lanebs {{/str}}</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div>
                    <div class="content" data-action="content_block"></div>
                </div>
            </div>
        </div>
    {{/body}}
    {{$footer}}
        <nav id="books_pagination" aria-label="book_pagination" style="height:36px;">
            <ul class="pagination">
                <li class="page-item page-start">
                    <a class="page-link" href="#">&laquo;&laquo;</a>
                </li>
                <li class="page-item disabled" data-page="0">
                    <a class="page-link prev" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Предыдущая</span>
                    </a>
                </li>
                <li class="page-item active disabled" data-page="1"><a class="page-link active" href="#">1</a></li>
                <li class="page-item" data-page="2">
                    <a class="page-link next" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Следующая</span>
                    </a>
                </li>
                <li class="page-item page-end">
                    <a class="page-link" href="#">&raquo;&raquo;</a>
                </li>
            </ul>
        </nav>
        <button type="button" class="btn btn-secondary" style="color:#174c8d;background-color:white;border-color:#4285f4;" data-action="cancel_button">{{#str}} cancel_str, mod_lanebs {{/str}}</button>
    {{/footer}}
{{/ core/modal }}